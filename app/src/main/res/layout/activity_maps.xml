
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MapsActivity"
    android:weightSum="1"
    android:background="@color/background_material_dark">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/place_autocomplete_prediction_secondary_text">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Trip Summary"
            android:id="@+id/textView10"
            android:layout_weight="0.07"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/textView33"
            android:layout_alignStart="@+id/textView33"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Print Bill"
            android:id="@+id/map_bill"
            android:layout_gravity="right"
            android:onClick="PrintBill"
            android:layout_below="@+id/textView36"
            android:layout_marginTop="55dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle No"
            android:id="@+id/textView32"
            android:layout_below="@+id/textView10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#ffffff"
            android:layout_alignRight="@+id/textView35"
            android:layout_alignEnd="@+id/textView35" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date Time"
            android:id="@+id/textView33"

            android:layout_below="@+id/textView32"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#ffffff"
            android:layout_alignRight="@+id/textView32"
            android:layout_alignEnd="@+id/textView32" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total KM"
            android:id="@+id/textView34"
            android:layout_below="@+id/textView33"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#ffffff"
            android:layout_alignRight="@+id/textView33"
            android:layout_alignEnd="@+id/textView33" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waiting Time"
            android:id="@+id/textView35"
            android:layout_below="@+id/textView34"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hire Time"
            android:id="@+id/textView36"
            android:layout_below="@+id/textView35"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#ffffff"
            android:layout_alignRight="@+id/textView35"
            android:layout_alignEnd="@+id/textView35" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waiting Price"
            android:id="@+id/textView37"
            android:layout_below="@+id/textView36"
            android:layout_toStartOf="@+id/map_bill"
            android:textColor="#ffffff"
            android:layout_toLeftOf="@+id/map_bill" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basic Price"
            android:id="@+id/textView38"
            android:layout_below="@+id/textView37"
            android:layout_alignLeft="@+id/textView37"
            android:layout_alignStart="@+id/textView37"
            android:textColor="#ffffff"
            android:layout_alignRight="@+id/textView37"
            android:layout_alignEnd="@+id/textView37" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Price"
            android:id="@+id/textView39"
            android:layout_below="@+id/textView38"
            android:layout_alignLeft="@+id/textView38"
            android:layout_alignStart="@+id/textView38"
            android:textColor="#ffffff"
            android:layout_alignRight="@+id/textView38"
            android:layout_alignEnd="@+id/textView38" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView40"
            android:layout_below="@+id/textView10"
            android:layout_toRightOf="@+id/textView32"
            android:layout_alignRight="@+id/map_bill"
            android:layout_alignEnd="@+id/map_bill"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/holo_blue_light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView41"
            android:layout_below="@+id/textView40"
            android:layout_toRightOf="@+id/textView33"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/holo_blue_light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView42"
            android:layout_below="@+id/textView33"
            android:layout_toRightOf="@+id/textView33"
            android:layout_alignRight="@+id/map_bill"
            android:layout_alignEnd="@+id/map_bill"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/holo_blue_light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView43"
            android:layout_below="@+id/textView42"
            android:layout_toRightOf="@+id/textView34"
            android:layout_alignRight="@+id/map_bill"
            android:layout_alignEnd="@+id/map_bill"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/holo_blue_light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView44"
            android:layout_below="@+id/textView35"
            android:layout_toRightOf="@+id/textView35"
            android:layout_alignRight="@+id/map_bill"
            android:layout_alignEnd="@+id/map_bill"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/holo_blue_light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView45"
            android:layout_alignRight="@+id/textView44"
            android:layout_alignEnd="@+id/textView44"
            android:textColor="@android:color/holo_blue_light"
            android:layout_below="@+id/textView44"
            android:layout_toRightOf="@+id/textView37"
            android:layout_toEndOf="@+id/textView37"
            android:gravity="right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView46"
            android:layout_below="@+id/textView45"
            android:layout_alignRight="@+id/map_bill"
            android:layout_alignEnd="@+id/map_bill"
            android:textColor="@android:color/holo_blue_light"
            android:layout_above="@+id/textView39"
            android:layout_toRightOf="@+id/textView37"
            android:layout_toEndOf="@+id/textView37"
            android:gravity="right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView47"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="@android:color/holo_red_light"
            android:layout_below="@+id/textView46"
            android:layout_toRightOf="@+id/textView38"
            android:layout_toEndOf="@+id/textView38"
            android:gravity="right"
            android:textStyle="bold"
            />

    </RelativeLayout>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.example.supunmadushanka.tuktukmeter.MapsActivity" />

</LinearLayout>